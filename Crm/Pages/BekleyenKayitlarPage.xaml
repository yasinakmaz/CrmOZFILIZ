<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crm.Pages.BekleyenKayitlarPage"
             xmlns:services="clr-namespace:Crm.Services"
             xmlns:md="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:vm="clr-namespace:Crm.ViewModels"
             xmlns:converters="clr-namespace:Crm.Converters"
             xmlns:models="clr-namespace:Crm.Model"
             Style="{StaticResource StlPage}"
             Title="Bekleyen Kayıtlar">

    <ContentPage.BindingContext>
        <vm:WaiterListViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="HeaderStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="Margin" Value="0,5,0,0" />
            </Style>
            <converters:ExpandCollapseIconConverter x:Key="expandCollapseIcon" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:Name="GrdShow">
        <Grid RowDefinitions="Auto,*">
            <Label Text="Bekleyen Kayıtlar" FontSize="24" FontAttributes="Bold" Margin="10" />

            <CollectionView Grid.Row="1" ItemsSource="{Binding Groups}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Spacing="0">
                            <!-- Header - Grup başlığı -->
                            <Frame Style="{StaticResource HeaderStyle}" 
                           BackgroundColor="{Binding Status.ColorCode}">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Image Source="{Binding Status.StatusImageSource}"
                                   HeightRequest="40" WidthRequest="40" 
                                   Grid.Column="0" />

                                    <Label Text="{Binding Status.TitleText}" 
                                   Grid.Column="1"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   VerticalOptions="Center" />

                                    <ImageButton Source="{Binding IsExpanded, Converter={StaticResource expandCollapseIcon}}"
                                         BackgroundColor="Transparent"
                                         Grid.Column="2"
                                         Command="{Binding ToggleCommand}"
                                         HeightRequest="30" WidthRequest="30" />
                                </Grid>
                            </Frame>

                            <!-- Content - Grup içeriği -->
                            <StackLayout BindableLayout.ItemsSource="{Binding Items}" 
                                 IsVisible="{Binding IsExpanded}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Margin="20,5,5,5" Padding="10">
                                            <StackLayout>
                                                <Label Text="{Binding BusinessAuthNameAndSurname}" FontAttributes="Bold" />
                                                <Label Text="{Binding BusinessPhoneNumber}" />
                                                <Label Text="{Binding BusinessProblem}" LineBreakMode="WordWrap" />
                                                <Label Text="{Binding AddRecordDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}" 
                                               FontSize="12" TextColor="Gray" />
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>

</ContentPage>