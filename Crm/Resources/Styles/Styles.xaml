<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <Style TargetType="Page" x:Key="StlPage">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}"/>
    </Style>

    <Style TargetType="Entry" x:Key="Txt">
        <Setter Property="IsSpellCheckEnabled" Value="False"></Setter>
        <Setter Property="TextTransform" Value="Uppercase"/>
        <Setter Property="IsTextPredictionEnabled" Value="True"></Setter>
        <Setter Property="FontAttributes" Value="None"></Setter>
        <Setter Property="ClearButtonVisibility" Value="WhileEditing"></Setter>
        <Setter Property="IsReadOnly" Value="False"></Setter>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="Margin" Value="0,0,10,0"></Setter>
        <Setter Property="ReturnType" Value="Next"/>
    </Style>

    <Style TargetType="Border" x:Key="BrdStl">
        <Setter Property="BackgroundColor" Value="{StaticResource BluePrimary}"/>
        <Setter Property="Stroke" Value="White"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
        <Setter Property="HeightRequest" Value="100"/>
    </Style>

    <Style TargetType="Label" x:Key="LblStl">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontAttributes" Value="Bold"/>

    </Style>

    <Style TargetType="Editor" x:Key="StlEdt">
        <Setter Property="Margin" Value="0,10,10,10"/>
        <Setter Property="IsReadOnly" Value="False"/>
        <Setter Property="IsSpellCheckEnabled" Value="False"/>
        <Setter Property="Text" Value="Notum :"/>
    </Style>
    

</ResourceDictionary>
