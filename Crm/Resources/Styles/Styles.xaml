<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Entry" x:Key="Txt">
        <Setter Property="IsSpellCheckEnabled" Value="True"></Setter>
        <Setter Property="IsTextPredictionEnabled" Value="True"></Setter>
        <Setter Property="VerticalOptions" Value="Center"></Setter>
        <Setter Property="FontAttributes" Value="Bold"></Setter>
        <Setter Property="FontFamily" Value="bold"></Setter>
        <Setter Property="ClearButtonVisibility" Value="WhileEditing"></Setter>
        <Setter Property="IsReadOnly" Value="False"></Setter>
        <Setter Property="Margin" Value="10,0,10,0"></Setter>
    </Style>

</ResourceDictionary>
